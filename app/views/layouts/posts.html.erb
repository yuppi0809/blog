<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
     <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!-- Compiled and minified JavaScript -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  </head>

  <body>

<!-- Navbar goes here -->

<!-- Dropdown(サインイン等) -->
<ul id="dropdown2" class="dropdown-content">
  <% if user_signed_in? %>
  <li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
  <li class="divider"></li>
  <% end %>
  <% if !user_signed_in? %>
  <li><a href= "/users/sign_in">Sign in</a></li>
   <li class="divider"></li>
  <li><a href="/users/sign_up">Sign up</a></li>
  <% end %>
</ul>
<!-- End Dropdown(サインイン等) -->

  <nav class="nav-extended padding">
    <div class="padding1">
    <div class="nav-wrapper">
      <a href="/" class="brand-logo">JUST A SIMPLE BLOG</a>

<!-- Dropdown Trigger(サインイン等) -->
<a class="right dropdown-trigger2 signed_in_user" href="#!" data-target="dropdown2" data-constrainwidth="false">
<% if user_signed_in? %>
  <i class="material-icons tiny left sign-in">person</i><%= current_user.nickname%>さん
<% end %>
<% if !user_signed_in? %>
  <i class="material-icons tiny left sign-in">person_outline</i>
<% end %>
</a>
<!-- End Dropdown Trigger -->

<!--DROP DOWN モバイル用-->
<ul id="dropdown1" class="dropdown-content">
  <li><a href="/">トップ</a></li>
   <li class="divider"></li>
  <li><a href="/posts/new">投稿する</a></li>
  <li class="divider"></li>
  <li><a href="#!">検索</a></li>
</ul>

<!-- Dropdown Trigger(モバイル用メニュー) -->

<a class="dropdown-trigger1" href="#!" data-target="dropdown1"><i class="material-icons hide-on-med-and-up">menu</i></a>
<!-- End Dropdown Trigger -->

  </div>
</div>
    <div class="nav-content">
      <ul class="tabs tabs-transparent hide-on-small-and-down mobile-nav">
        <li class="tab"><a href="/">トップ</a></li>
        <li class="tab"><a href="/posts/new">投稿する</a></li>
        <li class="tab"><a href="#test3">検索</a></li>

      </ul>
    </div>
  </nav>

<%= yield %>



<script>
  $(document).ready(function(){
    $(".dropdown-trigger2").dropdown({ hover: true, inDuration: 500 });
    $(".dropdown-trigger1").dropdown({ hover: false });

  $(document).ready(function(){
    $('#modal1').modal();
  });
  });
</script>
  </body>
</html>
